# ===========================================
# BookSync - Configuration Environment
# ===========================================
# Copier ce fichier vers .env et remplir les valeurs

# -------------------------------------------
# MangaCollec API (OAuth2)
# -------------------------------------------
MANGACOLLEC_CLIENT_ID=your_client_id_here
MANGACOLLEC_CLIENT_SECRET=your_client_secret_here
MANGACOLLEC_API_URL=https://api.mangacollec.com
MANGACOLLEC_AUTH_URL=https://api.mangacollec.com/oauth/token

# -------------------------------------------
# Database (PostgreSQL)
# -------------------------------------------
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=booksync
DATABASE_USER=booksync
DATABASE_PASSWORD=your_password_here

# -------------------------------------------
# Application
# -------------------------------------------
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=your_secret_key_here
